= form_with(model: product) do |form|
  - if product.errors.any?
    #error_explanation
      h2
        = pluralize(product.errors.count, "error")
        |  prohibited this product from being saved:
    ul
      - product.errors.each do |error|
        li
          = error.full_message
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :price
    = form.number_field :price
  .field
    = form.label :alcohol
    = form.text_field :alcohol
  .field
    = form.label :image_path
    = form.text_field :image_path
  .field
    = form.label :material
    = form.text_field :material
  .field
    = form.label :product_area
    = form.text_field :product_area
  .actions
    = form.submit
